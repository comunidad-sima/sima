
@model IEnumerable<WebSima.Models.MTest>
@{
    ViewBag.Title = "Historial ";

    ;
    List<WebSima.Models.MCurso> cursos =ViewBag.cursos ;
}

<div>
    <ol class="breadcrumb " style="background-color: #ffffff">
        <li class="breadcrumb-item ">Test</li>

    </ol>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title">Test disponibles</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <!-- /.box-tools -->
            </div>
            <!-- /.box-header -->
            <div class="box-body ">
                @foreach (var curso in cursos) { 
                <div class="panelBorder">

                    <h4>ASIGNATURA @curso.nombre_materia </h4>
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.id)</th>
                                    <th>@Html.DisplayNameFor(model => model.fecha_inicio)</th>
                                    <th>@Html.DisplayNameFor(model => model.fecha_fin)</th>
                                    <th>@Html.DisplayNameFor(model => model.estado_cierre)</th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                        {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.fecha_inicio).ToString().Substring(0, 10)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.fecha_fin).ToString().Substring(0, 10)
                                        </td>
                                        <td>
                                           @if (item.estado_cierre==0)
                                           {
                                              @("En curso") 
                                           }else {
                                                @("Culminado") 
                                           }
                                        </td>
                                        <td>
                                            <a class="btn btn-success fa fa-line-chart" href="/Test/Evaluacion_test?id=@item.id&grupo=@curso.id" title="Detalle evaluacion">Ver evaluación</a>
                                        </td>



                                    </tr>

                        }
                            </tbody>
                        </table>
                        <!-- /.box-body -->
                    </div>
                </div>
                    <br />
                }
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>