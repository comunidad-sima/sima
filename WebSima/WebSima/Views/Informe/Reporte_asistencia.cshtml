        cargar_dato_pie("pieChart", labels, data, false, "pie");// esta en carga_dato_chart_pie.js
    });
    function getNotas(posCol) {
        
        // filas del cuerpo  de la tabla
        var tr = $($("#table1-nota").find("tbody")).find("tr");
        var nfilas = tr.length;
        var pos = 0;
        var temNota = [];
        for (i = 0; i < nfilas; i++) {
            var nota = $(tr[i]).find("td")[posCol].innerHTML;
            temNota.push($.trim(nota));
        }
        document.getElementById("canidad-estudiantes").innerHTML = "<p>Estudiantes: " + nfilas+"</p>";
        return temNota;
    }
    function armaVerctorDato(posColumnaNotas) {
        var datos_tem = [];
        var notas = getNotas(posColumnaNotas);
        
        datos_tem.push(getCantidad(0, 2.9999, notas));
        datos_tem.push(getCantidad(3, 3.9999, notas));
        datos_tem.push(getCantidad(4, 4.9999, notas));
        datos_tem.push(getCantidad(5, 5, notas));
        console.log(datos_tem);
        return datos_tem;
    }
    function getCantidad(minLimite, maxLimite, notas) {
        var cantidad=0;
        for (i = 0; i < notas.length; i++) {
            if (notas[i].replace(",", ".") >= minLimite && notas[i].replace(",", ".") <= maxLimite) {
                cantidad++;               
            }           
        }
        return cantidad;

        
