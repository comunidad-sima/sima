@model WebSima.Models.MUsuario

@{
   
    ViewBag.Title = "Detalles";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item ">Home</li>
    <li class="breadcrumb-item active">Usuario</li>
    <li class="breadcrumb-item active">Detalles</li>
</ol>


<div class="panelBorder">
    <div class="panel panel-default">
        <div class="panel-heading">
            <strong> Detalles de usuario</strong>
        </div>
        <div class="panel-body">

            <dl class="row">
                <dt class=" col-12 col-sm-6 col-md-5 col-lg-3">Identificación:</dt>
                <dd class=" col-12 col-sm-6 col-md-7 col-lg-9">@Model.id</dd>

                <dt class="col-12 col-sm-6 col-md-5 col-lg-3">Nombres:</dt>
                <dd class="col-12 col-sm-6 col-md-7 col-lg-9">@Model.nombre</dd>

                <dt class="col-12 col-sm-6 col-md-5 col-lg-3">Apellidos:</dt>
                <dd class="col-12 col-sm-6 col-md-7 col-lg-9">@Model.apellidos</dd>

                <dt class="col-12 col-sm-6 col-md-5 col-lg-3">Perfil:</dt>
                <dd class="col-12 col-sm-6 col-md-7 col-lg-9">@Model.tipo</dd>

                <dt class="col-12 col-sm-6 col-md-5 col-lg-3">Correo:</dt>
                <dd class="col-12 col-sm-6 col-md-7 col-lg-9">@Model.correo</dd>

                <dt class="col-12 col-sm-6 col-md-5 col-lg-3">Celular:</dt>
                <dd class="col-12 col-sm-6 col-md-7 col-lg-9">@Model.celular</dd>

                <dt class="col-12 col-sm-6 col-md-5 col-lg-3">Fecha registro:</dt>
                <dd class="col-12 col-sm-6 col-md-7 col-lg-9  ">@Model.fecha_registro.ToString().Substring(0, 10)</dd>

            </dl>


            <div class="text-right">
              
                @Html.ActionLink("Volver a Inicio", "Home", new { }, new { @class = "btn btn-info btn-sm" })
            </div>
        </div>
    </div>
</div>

